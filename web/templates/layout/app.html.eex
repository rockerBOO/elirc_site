<!doctype html>
<html>
  <head>
    <title>ElircBot - Chat as a Service</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- load MUI -->

    <link href="<%= static_path(@conn, "/css/mui.min.css") %>" rel="stylesheet" type="text/css" />
    <script src="<%= static_path(@conn, "/js/mui.min.js") %>"></script>

    <style type="text/css">
    body {
      font-family: "Roboto Mono", "Consolas", monospace;
    }
    #hero {
      width: 100%;
    }

    #hero h1 {
      font-weight: bold;
      font-size: 4em;
      line-height: 1;
    }
    </style>
  </head>
  <body>
    <!-- example content -->
    <div id="hero" class="mui-text-center mui-container">
      <h1>ElircBot</h1>
    </div>
    <div class="mui-container">

      <%= @inner %>
    </div>
  </body>
</html>